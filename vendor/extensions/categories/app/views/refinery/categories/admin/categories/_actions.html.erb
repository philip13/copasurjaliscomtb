<ul>
  <% if ::Refinery::Categories::Admin::CategoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.categories_admin_categories_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_categories_admin_category_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Categories::Admin::CategoriesController.sortable? && ::Refinery::Categories::Category.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.categories_admin_categories_path,
                     t('.reorder', what:  "Categories"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.categories_admin_categories_path,
                      t('.reorder_done', what: "Categories"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
