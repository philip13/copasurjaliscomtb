<% content_for :body_content_title do %>
  <%= @race_result.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Rider</h1>
    <p>
      <%=raw @race_result.rider_id %>
    </p>
  </section>
  <section>
    <h1>Event</h1>
    <p>
      <%=raw @race_result.event_id %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @race_result.category_id %>
    </p>
  </section>
  <section>
    <h1>Rider Number</h1>
    <p>
      <%=raw @race_result.rider_number %>
    </p>
  </section>
  <section>
    <h1>Number Place</h1>
    <p>
      <%=raw @race_result.number_place %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="race_results">
      <% @race_results.each do |race_result| %>
        <li>
          <%= link_to race_result.title, refinery.race_results_race_result_path(race_result) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
