<%= form_for [refinery, :riders_admin, @rider] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @rider,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>

  <div class='field'>
    <%= f.label :mother_surname -%>
    <%= f.text_field :mother_surname -%>
  </div>

  <div class='field'>
    <%= f.label :birdth_date -%>
    <%= f.date_select :birdth_date -%>
  </div>

  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :phone_number -%>
    <%= f.text_field :phone_number -%>
  </div>

  <div class='field'>
    <%= f.label :blood_type -%>
    <%= f.text_field :blood_type -%>
  </div>

  <div class='field'>
    <%= f.label :rider_number -%>
    <%= f.number_field :rider_number -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @rider.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.riders.admin.riders.rider'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @rider.first_name) -%>
<% end -%>
