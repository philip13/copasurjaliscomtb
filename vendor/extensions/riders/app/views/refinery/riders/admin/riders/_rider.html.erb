<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(rider) -%>">
  <span class='title'>
    <%= rider.first_name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.riders_rider_path(rider), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_riders_admin_rider_path(rider), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.riders_admin_rider_path(rider), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: rider.first_name)}}  ) %>
  </span>
</li>
